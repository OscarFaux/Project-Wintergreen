<h3>Exosuit Fabricator</h3>
<div style="float: left; width: 50%;">
	{{for data.categories}}
		<div class="item">
			{{:helper.link(value, null, {'category' : value}, value == data.category ? 'selected' : null)}}
		</div>
	{{empty}}
		<div class="item">
			There are no known designs
		</div>
	{{/for}}
	{{for data.buildable}}
		{{if value.category == data.category}}
			<div class="item">
				{{:helper.link(value.name, null, {'build' : value.id})}} - {{:value.resourses}}, {{:value.time}}
			</div>
		{{/if}}
	{{/for}}
</div>
<div style="float: right; width: 50%">
	<div class="item">
		<b>Queue contains:</b>
	</div>
	{{if data.current}}
		<div class="item">
			<b>Now: {{:data.current}}</b> ({{:data.builtperc}}% ready) - {{:helper.link('Cancel', null, {'remove' : 1})}}
		</div>
		{{for data.queue}}
			<div class="item">
				{{:index + 2}}: {{:value}} - {{:helper.link('Remove', null, {'remove' : index + 2})}}
			</div>
		{{empty}}
			<div class="item">
				The queue is empty
			</div>
		{{/for}}
	{{else}}
		<div class="item">
			Nothing
		</div>
	{{/if}}
	<b>Materials:</b>
	{{for data.materials}}
		<div class="item">
			<div class="itemLabelWide">
				{{:value.mat}}: {{:value.amt}}/{{:data.maxres}}
			</div>
			<div class="itemContentMedium">
				{{if value.amt > 2000}}
					{{:helper.link('x1', null, {'eject' : value.mat, 'amount' : 1})}}
					{{if value.amt > 10000}}
						{{:helper.link('x5', null, {'eject' : value.mat, 'amount' : 5})}}
						{{if value.amt > 20000}}
							{{:helper.link('x10', null, {'eject' : value.mat, 'amount' : 10})}}
						{{/if}}
					{{/if}}
				{{/if}}
				{{:helper.link('All', null, {'eject' : value.mat, 'amount' : 0})}}
			</div>
		</div>
	{{/for}}
</div>

